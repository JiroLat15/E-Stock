<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- Other theme attributes -->
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="android:textColor">@color/textColorNight</item>
        <!-- Other dark theme attributes -->
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/your_drawer_icon_color</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="gapBetweenBars">4dp</item>
        <item name="arrowHeadLength">12dp</item>
        <item name="arrowShaftLength">8dp</item>
    </style>

    <style name="BoldTextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalTextAppearance">
        <item name="android:textStyle">normal</item>
    </style>

</resources>
