<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".eStockHomePage">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Shapes as Text view [used as islands and layout] -->

        <TextView
            android:id="@+id/SHP_RoundedRectangleIsland"
            android:layout_width="459dp"
            android:layout_height="71dp"
            android:background="@drawable/rounded_rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.00999999"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/SHP_LayoutHolder"
            android:layout_width="458dp"
            android:layout_height="575dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/rounded_rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SHP_RoundedRectangleIsland"
            app:layout_constraintVertical_bias="0.026" />

        <!-- Image Button for Functions -->
        <ImageButton
            android:id="@+id/BTN_SidePanelMenu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="5dp"
            android:background="#DAE8E7"
            android:contentDescription="Side Menu Button"
            android:scaleType="fitCenter"
            android:src="@drawable/menu"
            app:layout_constraintBottom_toBottomOf="@+id/SHP_RoundedRectangleIsland"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintStart_toStartOf="@+id/SHP_RoundedRectangleIsland"
            app:layout_constraintTop_toTopOf="@+id/SHP_RoundedRectangleIsland"
            tools:ignore="MissingConstraints" />

        <!-- FrameLayout for Adding Data -->
        <FrameLayout
            android:id="@+id/FL_AddProduct"
            android:layout_width="455dp"
            android:layout_height="573dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="392dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SHP_RoundedRectangleIsland"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="gone">

            <!-- Updated layout for data entry -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <!-- User Input for Adding Product -->

                <EditText
                    android:id="@+id/ET_ProdAddName"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="56dp"
                    android:hint="Product Name"
                    android:inputType="text"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/ET_ProdAddCode"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:hint="Product Code"
                    android:inputType="text"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ET_ProdAddName" />

                <EditText
                    android:id="@+id/ET_ProdAddVar"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:hint="Product Variation"
                    android:inputType="text"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ET_ProdAddCode" />

                <EditText
                    android:id="@+id/ET_ProdSubVar"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:hint="Product Sub-Variation"
                    android:inputType="text"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ET_ProdAddVar" />

                <EditText
                    android:id="@+id/ET_ProdAddQuant"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:hint="Product Quantity"
                    android:inputType="number"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ET_ProdSubVar" />

                <EditText
                    android:id="@+id/ET_ProdAddPrice"
                    android:layout_width="400dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:hint="Product Price"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ET_ProdAddQuant" />

                <!-- Submit Button -->

                <Button
                    android:id="@+id/BTN_AddSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    android:text="Add"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ET_ProdAddPrice"
                    app:layout_constraintVertical_bias="0.058" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <!-- FrameLayout for Removing Data -->
        <FrameLayout
            android:id="@+id/FL_RemoveProduct"
            android:layout_width="455dp"
            android:layout_height="573dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="392dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SHP_RoundedRectangleIsland"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="gone">

            <!-- Updated layout for data removal -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <!-- Spinner for Removing Items -->

                <TextView
                    android:id="@+id/SHP_RemoveSpinnerHolder"
                    android:layout_width="415dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/rectangle_dropdown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <Spinner
                    android:id="@+id/SPNR_RemoveProdNameAndCode"
                    android:layout_width="400dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/SHP_RemoveSpinnerHolder" />

                <!-- Text Views for Titles -->

                <TextView
                    android:id="@+id/TV_RemProdCode"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="9dp"
                    android:text="Product Code: "
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/TV_RemProdCodeData"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/SHP_RemoveSpinnerHolder" />

                <TextView
                    android:id="@+id/TV_RemProdVar"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Product Variation: "
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_RemProdCode" />

                <TextView
                    android:id="@+id/TV_RemSubVar"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Product Sub-Variation: "
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_RemProdVar" />

                <TextView
                    android:id="@+id/TV_RemProdQuant"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Product Quantity: "
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_RemSubVar" />

                <TextView
                    android:id="@+id/TV_RemProdPrice"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Product Price: "
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_RemProdQuant" />

                <!-- Data TextView Holders [Shapes] -->

                <TextView
                    android:id="@+id/SHP_RemProdCode"
                    android:layout_width="210dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/rectangle_dropdown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.96"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/SHP_RemoveSpinnerHolder"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/SHP_RemProdVar"
                    android:layout_width="210dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="29dp"
                    android:background="@drawable/rectangle_dropdown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.96"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/SHP_RemProdCode"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/SHP_RemProdSubVar"
                    android:layout_width="210dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rectangle_dropdown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.96"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/SHP_RemProdVar"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/SHP_RemProdQuant"
                    android:layout_width="210dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rectangle_dropdown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.96"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/SHP_RemProdSubVar"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/SHP_RemProdPrice"
                    android:layout_width="210dp"
                    android:layout_height="37dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rectangle_dropdown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.96"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/SHP_RemProdQuant"
                    tools:ignore="MissingConstraints" />

                <!-- Data TextView Holders [Shapes] -->

                <TextView
                    android:id="@+id/TV_RemProdCodeData"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.937"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/SHP_RemoveSpinnerHolder" />

                <TextView
                    android:id="@+id/TV_RemProdVarData"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.937"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_RemProdCodeData" />

                <TextView
                    android:id="@+id/TV_RemSubVarData"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.937"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_RemProdVarData" />

                <TextView
                    android:id="@+id/TV_RemProdQuantData"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.937"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_RemSubVarData" />

                <TextView
                    android:id="@+id/TV_RemProdPriceData"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.937"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_RemProdQuantData" />

                <!-- Remove Button -->

                <Button
                    android:id="@+id/BTN_RemSubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="415dp"
                    android:text="Remove"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/SHP_RemoveSpinnerHolder" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <!-- FrameLayout for Updating Data -->
        <FrameLayout
            android:id="@+id/FL_UpdateProduct"
            android:layout_width="455dp"
            android:layout_height="573dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="392dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SHP_RoundedRectangleIsland"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="gone">

            <!-- Updated layout for data removal -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <TextView
                    android:id="@+id/SHP_UpdateSpinnerHolder"
                    android:layout_width="415dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/rectangle_dropdown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/SHP_UpdProdName"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rectangle_dropdown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_UpdProdName"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/SHP_UpdProdCode"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rectangle_dropdown"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.963"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_UpdProdCode"
                    tools:ignore="MissingConstraints" />

                <!-- Spinner for Updating -->

                <Spinner
                    android:id="@+id/SPNR_UpdateProdNameAndCode"
                    android:layout_width="400dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/SHP_UpdateSpinnerHolder" />

                <!-- Text Views for Titles -->

                <TextView
                    android:id="@+id/TV_UpdProdName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="104dp"
                    android:text="Product Name: "
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/TV_UpdProdCode"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="104dp"
                    android:text="Product Code: "
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.972"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/TV_UpdProdVar"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Product Variation: "
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ET_UpdName" />

                <TextView
                    android:id="@+id/TV_UpdProdSubVar"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Product Sub-Variation: "
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.96"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ET_UpdProdCode" />

                <TextView
                    android:id="@+id/TV_UpdProdQuant"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Product Quantity: "
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.00"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ET_UpdProdVar" />

                <TextView
                    android:id="@+id/TV_UpdProdPrice"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:text="Product Price: "
                    android:textSize="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.96"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ET_UpdProdSubVar" />

                <!-- User Input for Updating Product -->

                <TextView
                    android:id="@+id/ET_UpdName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Product Name"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:textSize="18dp"
                    android:gravity="center_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_UpdProdName" />

                <TextView
                    android:id="@+id/ET_UpdProdCode"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Product Code"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:textSize="18dp"
                    android:gravity="center_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.96"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_UpdProdCode" />

                <EditText
                    android:id="@+id/ET_UpdProdVar"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Product Variation"
                    android:inputType="text"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_UpdProdVar" />

                <EditText
                    android:id="@+id/ET_UpdProdSubVar"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Product Sub-Variation"
                    android:inputType="text"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.96"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_UpdProdSubVar" />

                <EditText
                    android:id="@+id/ET_UpdProdQuant"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Product Quantity"
                    android:inputType="numberSigned"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.000"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_UpdProdQuant" />

                <EditText
                    android:id="@+id/ET_UpdProdPrice"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="Product Price"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.96"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TV_UpdProdPrice" />

                <!-- Update Button -->

                <Button
                    android:id="@+id/BTN_UpdUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
